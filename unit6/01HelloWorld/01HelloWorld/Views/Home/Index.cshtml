@{
    ViewBag.Title = "Hora Actual";

    // C# code block in Razor
    DateTime horaActual = DateTime.Now;
    string formatoHora = horaActual.ToString("HH:mm");
    bool esTarde = horaActual.Hour >= 12; // Check if the hour is 12 or later
}

@* Display the current time *@
<p>Hola, son las @formatoHora</p>

@* Display the conditional text *@
<p>
    @if (esTarde)
    {
        // C# code inside an HTML block
        <text>Hemos pasado de las 12 del mediodía.</text>
    }
    else
    {
        // C# code inside an HTML block
        <text>Todavía no hemos pasado de las 12 del mediodía.</text>
    }
</p>
